<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Inicio de sesión de cuenta
            </div>
            <div class="card-body">
                <form action="/users/signin" method="POST" onsubmit="validateData()">                
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="E-mail">
                    </div>
                    <div class="form-group">
                        <input type="password" id="pass" class="form-control" name="password" placeholder="Password">
                    </div>                    
                    <button class="btn btn-primary btn-block">
                        Iniciar sesión
                    </button>                    
                </form>                
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        function validateData() {
            const email = document.querySelector('input[name="email"]');
            const password = document.querySelector('input[name="password"]');
               
            const email2 = email.value.trim();
            const password2 = password.value.trim();

            if(!email2 || !password2 ) {
                event.preventDefault();
                Swal.fire('Error', 'Ingresa los datos que se solicitan.', 'error');
            } else {
                encryptPassword();
            }                
        };

        function encryptPassword() {
            const password = document.getElementById("pass").value;
            const hash = CryptoJS.MD5(password).toString();
            document.getElementById("pass").value = hash;
        }
    </script>   
</div>