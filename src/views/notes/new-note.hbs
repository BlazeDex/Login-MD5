<div class="col md-4 mx-auto">
    <div class="card text-center">
        <h3>Nueva nota</h3>
    </div>
    <div class="card-body">
        <form id="noteForm" action="/notes/new-note" method="POST">
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Título" autofocus>
            </div>
            <div class="form-group">
                <textarea name="description" placeholder="Descripción" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    const noteForm = document.getElementById('noteForm');
    noteForm.addEventListener('submit', function(event) {
        const titleInput = document.querySelector('input[name="title"]');
        const descriptionInput = document.querySelector('textarea[name="description"]');
        
        if (titleInput.value.trim() === '' || descriptionInput.value.trim() === '') {
            event.preventDefault();
            swal.fire('Error', '¡Hay algunos campos vacíos!', 'error');
        }
    });
</script>