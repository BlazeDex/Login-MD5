<div class="col md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form id="noteForm" action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" placeholder="Título" class="form-control" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Descripción" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    const noteForm = document.getElementById('noteForm');
    noteForm.addEventListener('submit', function(event) {
        const titleInput = document.querySelector('input[name="title"]');
        const descriptionInput = document.querySelector('textarea[name="description"]');
        
        if (titleInput.value.trim() === '' || descriptionInput.value.trim() === '') {
            event.preventDefault();
            Swal.fire('Error', '¡Hay algunos campos vacíos!', 'error');
        }
    });
</script>