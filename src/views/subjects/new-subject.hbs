<div class="col md-4 mx-auto">
    <div class="card text-center">
        <h3>Nueva asginatura</h3>
    </div>
    <div class="card-body">
        <form id="subjectForm" action="/subjects/new-subject" method="POST">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Nombre" autofocus>
            </div>
            <div class="form-group">
                <textarea name="description" placeholder="Descripcion" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="number" name="hours" placeholder="Horas" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    const subjectForm = document.getElementById('subjectForm');
    subjectForm.addEventListener('submit', function(event) {
        const titleInput = document.querySelector('input[name="name"]');
        const descriptionInput = document.querySelector('textarea[name="description"]');
        const hoursInput = document.querySelector('input[name="hours"]');
        
        if (titleInput.value.trim() === '' || descriptionInput.value.trim() === '' || hoursInput.value.trim() === '') {
            event.preventDefault();
            Swal.fire('Error', '¡Hay algunos campos vacíos!', 'error');
        } else if(hoursInput.value.trim() <= 2) {
            event.preventDefault();
            Swal.fire('Error', '¡La asginatura debe tener al menos 3 horas!', 'error');
        }
    });
</script>