<div class="div">
   <a href="/subjects/add" class="btn btn-primary float-left">Agregar nueva asignatura</a>
</div>
<div class="d-flex justify-content-end">
   <form action="/subjects/search" method="POST" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Buscar asignaturas">
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>
</div>
<div class="row">
    {{#each subjects}}
        <div class="col md-3 mb-5 justify-content-between align-items-center">
            <div class="card" style="width: 300px;">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">                       
                        <span class="card-text-truncate">{{name}}</span> <a href="subjects/edit/{{_id}}"><i class="fa fa-pencil"></i></a>                       
                    </h4>        
                    <p class="card-text card-text-truncate">{{description}}</p>
                    <form action="/subjects/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-block btn-sm">
                                Eliminar
                            </button>
                    </form>
                </div>
            </div>
        </div>          
    {{/each}}  
</div>