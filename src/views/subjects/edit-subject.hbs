<div class="col md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar informaci√≥n de la asignatura</h3>
        </div>
        <div class="card-body">
            <form action="/subjects/edit/{{subject._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" value="{{subject.name}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{subject.description}}</textarea>
                </div>
                <div class="form-group">
                    <input type="number" name="hours" placeholder="Hours" class="form-control" value="{{subject.hours}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>