<div class="col md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar información de la facultad</h3>
        </div>
        <div class="card-body">
            <form id="facultyForm" action="/faculties/edit/{{faculty._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Nombre" class="form-control" value="{{faculty.name}}">
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Descripción" class="form-control">{{faculty.description}}</textarea>
                </div>
                <div class="form-group">
                    <input type="number" name="duration" placeholder="Duración" class="form-control" value="{{faculty.duration}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    const facultyForm = document.getElementById('facultyForm');
    facultyForm.addEventListener('submit', function(event) {
        const titleInput = document.querySelector('input[name="name"]');
        const descriptionInput = document.querySelector('textarea[name="description"]');
        const durationInput = document.querySelector('input[name="duration"]');
        
        if (titleInput.value.trim() === '' || descriptionInput.value.trim() === '' || durationInput.value.trim() === '') {
            event.preventDefault();
            Swal.fire('Error', '¡Hay algunos campos vacíos!', 'error');
        }
    });
</script>